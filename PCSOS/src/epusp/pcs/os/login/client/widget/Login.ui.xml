<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:image field='backgroundPicture' src='../images/login-background.jpg' />
	<ui:image field='backgroundSendPicture' src='../images/login-send.jpg' />

	<ui:style>
	@sprite .backgroundPicture {
		width: 470px;
		height: 187px;
		gwt-image: 'backgroundPicture';
	}
	
	@sprite .send {
		width: 70px;
		height: 187px;
		cursor: pointer;
		gwt-image: 'backgroundSendPicture';
	}
	
	.login-text {
		font-size: 30px;
		color: white;
		font-weight: bolder;
		font-family: monospace;
	}
	
	.header {
		border-bottom-color: rgba(255, 255, 255, 0.4);
		border-bottom-style: solid;
		border-bottom-width: medium;
	}
	
	.body {
		border-bottom-color: rgba(255, 255, 255, 0.4);
		border-bottom-style: solid;
		border-bottom-width: medium;
	}
	
	.box-defaut {
		color: gray;
		font-size: medium;
		font-style: italic;
		font-weight: bold;
		border-radius: 3px;
		-webkit-border-radius: 3px;
		-moz-border-radius: 3px;
	}
	
	.remember-text {
		color: white;
		text-align: center;
	}
	</ui:style>

	<g:DecoratorPanel>
		<g:HorizontalPanel styleName="{style.backgroundPicture}">

			<g:cell>

				<g:VerticalPanel>
					<g:cell>
						<g:HorizontalPanel height="60px" width="400px"
							horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE"
							spacing="20" styleName="{style.header}">
							<g:cell width="240px">
								<g:Label text="LOGIN" styleName="{style.login-text}" />
							</g:cell>
						</g:HorizontalPanel>
					</g:cell>

					<g:cell>
						<g:HorizontalPanel height="70px" width="400px"
							styleName="{style.body}">

							<g:cell horizontalAlignment="ALIGN_CENTER"
								verticalAlignment="ALIGN_MIDDLE">
								<g:AbsolutePanel ui:field="usernamePanel">
									<g:TextBox width="170px" ui:field="usernameBox"
										maxLength="15" styleName="{style.box-defaut}" text="user" />
									<g:Image ui:field="user" />
								</g:AbsolutePanel>
							</g:cell>

							<g:cell horizontalAlignment="ALIGN_CENTER"
								verticalAlignment="ALIGN_MIDDLE">
								<g:AbsolutePanel ui:field="passwordPanel">
									<g:PasswordTextBox width="170px" maxLength="15"
										styleName="{style.box-defaut}" ui:field="passwordBox" text="password" />
									<g:Image ui:field="lock" />
								</g:AbsolutePanel>
							</g:cell>

						</g:HorizontalPanel>
					</g:cell>

					<g:cell>
						<g:HorizontalPanel horizontalAlignment="ALIGN_LEFT"
							verticalAlignment="ALIGN_MIDDLE" spacing="10" height="40px">
							<g:RadioButton checked="false" text="Remember me"
								styleName="{style.remember-text}" name="remember" />
						</g:HorizontalPanel>
					</g:cell>
				</g:VerticalPanel>

			</g:cell>

			<g:cell>
				<g:FocusPanel ui:field="send">
					<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER"
						verticalAlignment="ALIGN_MIDDLE" width="70px" height="187px"
						styleName="{style.send}">
						<g:Image height="50px" width="50px" ui:field="sendIcon" />
					</g:HorizontalPanel>
				</g:FocusPanel>
			</g:cell>
		</g:HorizontalPanel>
	</g:DecoratorPanel>


</ui:UiBinder> 