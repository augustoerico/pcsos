<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:image field='backgroundPicture' src='../images/monitor-background.jpg' />

	<ui:style>
	@sprite .backgroundPicture {
		gwt-image: 'backgroundPicture';
	}
	
	.tmp {
		color: white;
	}
	
	.controlPanel {
		text-align: center;
	}
	
	.controlItem {
		display: inline-block;
		padding-left: 10px;
		padding-right: 10px;
	}
	
	.picture{
		border-radius: 50%
	}
	</ui:style>

	<g:AbsolutePanel width="100%" height="100%"
		styleName="{style.backgroundPicture}">
		<g:DockLayoutPanel unit="PCT" width="100" height="100%">
			<g:south size="90">
				<g:DeckLayoutPanel ui:field="deckPanel" width="100%"
					height="100%">
					<g:AbsolutePanel width="100%" height="100%" title="Google Maps View" ui:field="mapsArea" />
					<g:Label styleName="{style.tmp}">info goes here</g:Label>
					<g:Label styleName="{style.tmp}">backup goes here</g:Label>
				</g:DeckLayoutPanel>
			</g:south>

			<g:north size="5">
				<g:HorizontalPanel width="100%" height="100%"
					verticalAlignment="middle" horizontalAlignment="left">
					<g:cell width="40px">
						<g:Image width="35px" height="auto" ui:field="logo" />
					</g:cell>
					<g:cell>
						<g:Label styleName="{style.tmp}">PCS.O.S</g:Label>
					</g:cell>
				</g:HorizontalPanel>
			</g:north>

			<g:west size="12.5">
				<g:Label styleName="{style.tmp}">phone</g:Label>
			</g:west>

			<g:east size="12.5">
				<g:Image height="30px" width="auto" ui:field="picture" styleName="{style.picture}"/>
			</g:east>

			<g:center>
				<g:FlowPanel width="100%" height="100%" styleName="{style.controlPanel}">
					<g:VerticalPanel styleName="{style.controlItem}"
						verticalAlignment="middle" horizontalAlignment="right">
						<g:cell>
							<g:Image height="30px" width="auto" ui:field="map" />
						</g:cell>
						<g:cell>
							<g:RadioButton ui:field="mapRadio" name="control" enabled="true"
								checked="true" />
						</g:cell>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.controlItem}"
						verticalAlignment="middle" horizontalAlignment="center">
						<g:cell>
							<g:Image height="30px" width="auto" ui:field="info" />
						</g:cell>
						<g:cell>
							<g:RadioButton ui:field="infoRadio" name="control" enabled="true"
								checked="false" />
						</g:cell>
					</g:VerticalPanel>
					<g:VerticalPanel styleName="{style.controlItem}"
						verticalAlignment="middle" horizontalAlignment="left">
						<g:cell>
							<g:Image height="30px" width="auto" ui:field="reinforcements" />
						</g:cell>
						<g:cell>
							<g:RadioButton ui:field="reinforcementsRadio" name="control" enabled="true"
								checked="false" />
						</g:cell>
					</g:VerticalPanel>
				</g:FlowPanel>
			</g:center>
		</g:DockLayoutPanel>
	</g:AbsolutePanel>
</ui:UiBinder> 