<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.controlPanel {
		display: inline-flex;
	}
	
	.victimDetailsPanel {
		padding-left: 5px;
		padding-top: 10px;
	}
	
	.infoPanel {
		
	}
	</ui:style>

	<g:AbsolutePanel width="100%" height="100%">
		<g:AbsolutePanel ui:field="background" width="100%"
			height="100%" styleName="background" />

		<g:AbsolutePanel ui:field="area" width="100%" height="100%"
			styleName="{style.infoPanel}">
			<g:VerticalPanel width="100%" height="100%">
				<g:cell>
					<g:HorizontalPanel>
						<g:cell height="100%" width="230px">
							<g:AbsolutePanel styleName="{style.victimDetailsPanel}"
								ui:field="victimPanel" />
						</g:cell>

						<g:cell>
							<g:VerticalPanel width="100%" height="100%">
								<g:cell width="100%" height="50px">
									<g:FlowPanel ui:field="control" styleName="{style.controlPanel}" />
								</g:cell>
								<g:cell width="100%">
									<g:DeckLayoutPanel width="400px" height="400px"
										ui:field="infoPanel" />
								</g:cell>
							</g:VerticalPanel>
						</g:cell>

					</g:HorizontalPanel>
				</g:cell>

			</g:VerticalPanel>
		</g:AbsolutePanel>
	</g:AbsolutePanel>
</ui:UiBinder> 