<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.tmp {
		background-color: white;
		border-radius: 20px;
		z-index: 0;
	}
	
	.controlPanel{
		display: inline-flex;
	}

	.victimDetailsPanel {
		padding-left: 5px;
		padding-top: 10px;
	}
	
	.infoBackgroud{
		position: fixed !important;
		background-color: black;
		border-radius: 20px;
		opacity: 0.95;
		-webkit-filter: blur(5px);
		-moz-filter: blur(5px);
		-o-filter: blur(5px);
		-ms-filter: blur(5px);
		filter: blur(5px);
	}
	
	.infoPanel{

	}
	</ui:style>

	<g:AbsolutePanel width="100%" height="100%">
	<g:AbsolutePanel ui:field="background" width="100%" height="100%" styleName="{style.infoBackgroud}" />

	<g:AbsolutePanel width="100%" height="100%" styleName="{style.infoPanel}">
		<g:VerticalPanel width="100%" height="100%">			
			<g:cell>
				<g:HorizontalPanel>
					<g:cell height="100%" width="230px">
						<g:AbsolutePanel styleName="{style.victimDetailsPanel}" ui:field="victimPanel" />
					</g:cell>
					
					<g:cell>
						<g:VerticalPanel width="100%" height="100%">
							<g:cell width="100%" height="50px">
								<g:FlowPanel ui:field="control" styleName="{style.controlPanel}"/>
							</g:cell>
							<g:cell width="100%">
								<g:DeckLayoutPanel width="400px" height="400px" ui:field="infoPanel" />
							</g:cell>
						</g:VerticalPanel>
					</g:cell>
					
				</g:HorizontalPanel>
			</g:cell>
			
		</g:VerticalPanel>
	</g:AbsolutePanel>
	</g:AbsolutePanel>
</ui:UiBinder> 