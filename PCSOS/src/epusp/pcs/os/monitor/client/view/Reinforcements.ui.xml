<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field='addButton' src='../images/add.png' />
	<ui:image field='removeButton' src='../images/remove.png' />
	<ui:image field='sendButton' src='../images/send_request.png' />
	
	<ui:style type="epusp.pcs.os.monitor.client.view.Reinforcements.Sytles">
	@sprite .add {
		gwt-image: 'addButton';
	}
	
	@sprite .remove {
		gwt-image: 'removeButton';
	}
	
	@sprite .send {
		gwt-image: 'sendButton';
	}
	
	.button{
		height: 45px;
		width: 45px;
		cursor: pointer;
		background-size: 45px auto;
	}
	
	.sendButton{
		height: 35px;
		width: 35px;
		cursor: pointer;
		background-size: 35px auto;
	}

	.optionsPanel {
		display: inline-flex;
		background: transparent !important;
	}

	.panel {
		
	}
	</ui:style>

	<g:AbsolutePanel width="100%" height="100%">
		<g:AbsolutePanel ui:field="background" width="100%"
			height="100%" styleName="background" />

		<g:AbsolutePanel ui:field="area" width="100%" height="100%"
			styleName="{style.panel}">
			<g:HorizontalPanel width="100%" height="100%">
				<g:cell height="100%" width="300px">
					<g:StackLayoutPanel height="100%" width="100%" unit="PX" ui:field="options" />
				</g:cell>
				
				<g:cell width="45px">
					<g:FlowPanel>
						<g:Image styleName="{style.add} {style.button}" ui:field="add" />
						<g:Image styleName="{style.remove} {style.button}" ui:field="remove" />
					</g:FlowPanel>
				</g:cell>
				
				<g:cell height="100%" width="300px">
					<g:FlowPanel height="100%" width="100%">
						<g:AbsolutePanel height="40px" width="100%">
							<g:Image styleName="{style.send} {style.sendButton}" ui:field="send" />
						</g:AbsolutePanel>
						<g:FlowPanel width="100%" ui:field="choosen"/>
					</g:FlowPanel>
				</g:cell>
			</g:HorizontalPanel>
		</g:AbsolutePanel>
	</g:AbsolutePanel>
</ui:UiBinder> 