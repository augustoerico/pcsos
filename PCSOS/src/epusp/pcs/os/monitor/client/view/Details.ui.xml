<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:epusp.pcs.os.shared.client.panel">
	<ui:style type="epusp.pcs.os.monitor.client.view.Details.Style">
	.picture {
		border-radius: 5px;
	}
	
	.abPanel {
		float: left;
	}
	
	.panel {
		padding-bottom: 10px;
		-webkit-column-break-inside: avoid;
        page-break-inside: avoid;
        break-inside: avoid;
	}
	
	.label {
		font-family: Perpetua, Baskerville, "Big Caslon", "Palatino Linotype",
			Palatino, "URW Palladio L", "Nimbus Roman No9 L", serif;
		color: #FFFFFF;
		font-size: 17px;
		padding-left: 9px;
		font-weight: bold;
		font-style: italic;
		font-variant: small-caps;
		text-shadow: 1px -1px 3px #D4D2D2;
	}
	
	.text {
		font-family: Perpetua, Baskerville, "Big Caslon", "Palatino Linotype",
			Palatino, "URW Palladio L", "Nimbus Roman No9 L", serif;
		color: #FFFFFF;
		font-size: 18px;
		padding-left: 15px;
		font-variant: small-caps;
	}
	
	.captionPanel {
		border-style: none;
		background-color: red;
	}
	
	.categoriesPanel{
		color: white;
		max-width: 1705px;
		overflow-x: auto;
		overflow-y: hidden;
	}
	</ui:style>

	<f:HorizontalDivPanel ui:field="infoPanel">
		<f:VerticalDivPanel ui:field="header">
			<g:Image height="100px" width="auto" styleName="{style.picture}"
				ui:field="picture" />
		</f:VerticalDivPanel>
		<f:HorizontalDivPanel ui:field="categoriesPanel" />
	</f:HorizontalDivPanel>
</ui:UiBinder> 