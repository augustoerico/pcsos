<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.picture {
		border-radius: 5px;
	}
	</ui:style>

	<g:AbsolutePanel>
		<g:VerticalPanel ui:field="panel">
			<g:cell>
				<g:Label ui:field="infoHeader" />
			</g:cell>
			<g:cell>
				<g:HorizontalPanel>
					<g:cell>
						<g:Image height="100px" width="auto" styleName="{style.picture}"
							ui:field="picture" />
					</g:cell>
					<g:cell>
						<g:VerticalPanel ui:field="staticAttributes" />
					</g:cell>
				</g:HorizontalPanel>
			</g:cell>
		</g:VerticalPanel>

	</g:AbsolutePanel>
</ui:UiBinder> 