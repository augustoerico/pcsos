<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="epusp.pcs.os.monitor.client.view.Details.Style">
	.picture {
		border-radius: 5px;
	}
	
	.abPanel{
		float: left;
	}
	
	.panel{
		padding-bottom: 10px;
	}
	
	.label {
		font-family: Perpetua, Baskerville, "Big Caslon", "Palatino Linotype",
			Palatino, "URW Palladio L", "Nimbus Roman No9 L", serif;
		color: #FFFFFF;
		font-size: 17px;
		padding-left: 9px;
		font-weight: bold;
		font-style: italic;
		font-variant: small-caps;
		text-shadow: 1px -1px 3px #D4D2D2;
	}
	
	.text {
		font-family: Perpetua, Baskerville, "Big Caslon", "Palatino Linotype",
			Palatino, "URW Palladio L", "Nimbus Roman No9 L", serif;
		color: #FFFFFF;
		font-size: 18px;
		padding-left: 15px;
		font-variant: small-caps;
	}
	</ui:style>

	<g:AbsolutePanel styleName="{style.abPanel}">
		<g:VerticalPanel ui:field="panel">
			<g:cell>
				<g:Label ui:field="infoHeader" />
			</g:cell>
			<g:cell>
				<g:HorizontalPanel>
					<g:cell>
						<g:Image height="100px" width="auto" styleName="{style.picture}"
							ui:field="picture" />
					</g:cell>
					<g:cell>
						<g:VerticalPanel ui:field="staticAttributes" />
					</g:cell>
				</g:HorizontalPanel>
			</g:cell>
			<g:cell>
				<g:VerticalPanel ui:field="dynamicAttributes"/>
			</g:cell>
		</g:VerticalPanel>

	</g:AbsolutePanel>
</ui:UiBinder> 